CREATE TABLE people.SystemUser
(
	SystemUserId			INT				NOT NULL	Identity(1,1),
	SystemUserName			VARCHAR(1000)	NOT NULL,
	SystemUserType			VARCHAR(100)	NOT NULL,
	SystemUserParentId		INT				NOT NULL	DEFAULT(0),
	IsActive				BIT				NOT NULL	DEFAULT(1),

		CONSTRAINT PC_people_SystemUser PRIMARY KEY CLUSTERED (SystemUserId asc)
			WITH (DATA_COMPRESSION = PAGE),

		CONSTRAINT FK_people_SystemUser_people_SystemUser_SystemUserParentId  FOREIGN KEY (SystemUserParentId) REFERENCES people.SystemUser (SystemUserId),
)
